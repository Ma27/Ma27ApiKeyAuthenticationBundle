{
    "name": "ma27/api-key-authentication-bundle",
    "description": "A bundle that provides the possibility to generate api keys for rest apis",
    "type": "symfony-bundle",
    "keywords": ["Authentication", "Api Key", "Symfony Bundle", "Security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Maximilian Bosch",
            "email": "maximilian.bosch.27@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "symfony/symfony": "~2.8|~3.0",
        "doctrine/common": "~2.5",
        "doctrine/collections": "~1.3",
        "hautelook/phpass": "~0.3",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "~1.3",
        "doctrine/orm": "~2.4",
        "phpunit/phpunit": "~4.8",
        "phpunit/php-code-coverage": "~2.2"
    },
    "autoload": {
        "psr-4": {
            "Ma27\\ApiKeyAuthenticationBundle\\": ""
        }
    },
    "suggest": {
        "doctrine/orm": "When storing the users in an SQL database",
        "doctrine/mongodb-odm": "When storing users in a mongodb database",
        "doctrine/couchdb-odm": "When storing users in a couchdb database",
        "monolog/monolog": "When logging the apikey purger"
    }
}
